<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="987.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tour_project.controllers.PriceListController">
    <children>
        <TableView id="tablePrice" fx:id="tablePrice" layoutX="85.0" layoutY="43.0" prefHeight="216.0"
                   prefWidth="817.0">
            <columns>
                <TableColumn id="magia" fx:id="magia" prefWidth="123.0" text="Mã giá"/>
                <TableColumn id="thanhtien" fx:id="thanhtien" prefWidth="193.0" text="Thành tiền"/>
                <TableColumn id="thoigianbatdau" fx:id="thoigianbatdau" prefWidth="273.0" text="Thời gian bắt đầu"/>
                <TableColumn id="thoigianketthuc" fx:id="thoigianketthuc" prefWidth="227.0" text="Thời gian kết thúc"/>
            </columns>
        </TableView>
        <TextField id="magiatf" fx:id="magiatf" editable="false" layoutX="246.0" layoutY="278.0" prefHeight="32.0"
                   prefWidth="263.0"/>
        <TextField id="starttf" fx:id="starttf" layoutX="246.0" layoutY="394.0" prefHeight="32.0" prefWidth="263.0"/>
        <TextField id="thanhtientf" fx:id="thanhtientf" layoutX="246.0" layoutY="333.0" prefHeight="32.0"
                   prefWidth="263.0"/>
        <TextField id="endtf" fx:id="endtf" layoutX="246.0" layoutY="458.0" prefHeight="32.0" prefWidth="263.0"/>
        <Label layoutX="129.0" layoutY="259.0"/>
        <Label layoutX="107.0" layoutY="284.0" text="Mã giá">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="105.0" layoutY="339.0" text="Thành tiền">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="107.0" layoutY="400.0" text="Thời gian bắt đầu">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="105.0" layoutY="464.0" text="Thời gian kết thúc">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Button id="addBtn" fx:id="addBtn" layoutX="631.0" layoutY="278.0" mnemonicParsing="false"
                onAction="#handleInsertPrice" prefHeight="44.0" prefWidth="80.0" style="-fx-background-color: #0B99D3;"
                text="Add" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button layoutX="813.0" layoutY="278.0" mnemonicParsing="false" onAction="#handleDeletePrice" prefHeight="44.0"
                prefWidth="80.0" style="-fx-background-color: #0B99D3;" text="Delete" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button layoutX="631.0" layoutY="410.0" mnemonicParsing="false" onAction="#handleUpdatePrice" prefHeight="44.0"
                prefWidth="80.0" style="-fx-background-color: #0B99D3;" text="Update" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button layoutX="813.0" layoutY="410.0" mnemonicParsing="false" onAction="#handleRefreshPrice" prefHeight="44.0"
                prefWidth="80.0" style="-fx-background-color: #0B99D3;" text="Refresh" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Label layoutX="36.0" layoutY="14.0" text="BẢNG GIÁ TOUR: ">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label id="label" fx:id="label" layoutX="165.0" layoutY="14.0" prefHeight="17.0" prefWidth="120.0" text="Label">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
