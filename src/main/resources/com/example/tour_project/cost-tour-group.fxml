        <Button layoutX="585.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleUpdateCost" prefHeight="39.0"
                prefWidth="74.0" style="-fx-background-color: #0B99D3;" text="UPDATE" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button layoutX="831.0" layoutY="418.0" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="39.0"
                prefWidth="74.0" style="-fx-background-color: #0B99D3;" text="REFRESH" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
