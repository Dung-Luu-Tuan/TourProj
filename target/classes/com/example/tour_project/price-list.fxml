                <TableColumn id="thanhtien" fx:id="thanhtien" prefWidth="106.0" text="Thành tiền"/>
                <TableColumn id="thoigianbatdau" fx:id="thoigianbatdau" prefWidth="272.0" text="Thời gian bắt đầu"/>
