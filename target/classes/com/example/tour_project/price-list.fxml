            </columns>
        </TableView>
        <TextField id="magiatf" fx:id="magiatf" editable="false" layoutX="246.0" layoutY="251.0" prefHeight="32.0" prefWidth="206.0"/>
        <TextField id="starttf" fx:id="starttf" layoutX="246.0" layoutY="371.0" prefHeight="32.0" prefWidth="206.0"/>
        <TextField id="thanhtientf" fx:id="thanhtientf" layoutX="246.0" layoutY="311.0" prefHeight="32.0"
                   prefWidth="206.0"/>
        <TextField id="endtf" fx:id="endtf" layoutX="246.0" layoutY="426.0" prefHeight="32.0" prefWidth="206.0"/>
        <Label layoutX="129.0" layoutY="259.0"/>
        <Label layoutX="105.0" layoutY="258.0" text="Mã giá">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="105.0" layoutY="317.0" text="Thành tiền">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="106.0" layoutY="377.0" text="Thời gian bắt đầu">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Label layoutX="105.0" layoutY="432.0" text="Thời gian kết thúc">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <Button fx:id="addBtn" id="addBtn" layoutX="512.0" layoutY="292.0" mnemonicParsing="false" onAction="#handleInsertPrice" prefHeight="25.0"
                prefWidth="51.0" text="Add"/>
        <Button layoutX="618.0" layoutY="292.0" mnemonicParsing="false"  onAction="#handleDeletePrice" text="Delete"/>
        <Button layoutX="512.0" layoutY="391.0" mnemonicParsing="false" onAction="#handleUpdatePrice" text="Update"/>
        <Button layoutX="618.0" layoutY="391.0" mnemonicParsing="false" onAction="#handleRefreshPrice" text="Refresh"/>
        <Button layoutX="564.0" layoutY="343.0" mnemonicParsing="false" onAction="#goBack" prefHeight="25.0" prefWidth="55.0" text="Back"/>
    </children>
</AnchorPane>
